  <div class="participation_all">
    <div class="participation_header">
      <div><h4>Les poules qui ont dit oui!</h4></div>
      <div class="participation_icone">
        <% if @event.joined?(current_user) %>
          <%= link_to participation_path(@event.participations.find_by(user: current_user), status: "going", type: "show"), method: :patch, remote: true do %>  
            <i class="fa fa-check" data-toggle="tooltip" title="J'y vais!"></i>
          <% end %>
        <% else %>
           <%= link_to event_participations_path(@event, status: "going", type: "show"), method: :post, remote: true do %>
            <i class="fa fa-check" data-toggle="tooltip" title="J'y vais!"></i>
          <% end %> 
        <% end %>
      </div>
    </div>
    <div class="particpation_avatar">
      <% @event.participations.each do |participation| %>
        <%if participation.status == "going" %>
          <div class="avatar_user">
            <%= render "users/avatar_small", user: participation.user %>  
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="participation_all">
    <div class="participation_header">
      <div><h4>Les poules qui hésitent encore!</h4></div>
      <div class="participation_icone">
        <% if @event.joined?(current_user) %>
          <%= link_to participation_path(@event.participations.find_by(user: current_user), status: "maybe", type: "show"), method: :patch, remote: true do %>
            <i class="fa fa-question" data-toggle="tooltip" title="Peut-être"></i>
