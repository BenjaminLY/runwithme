<div class="container padded">
  <div class="row">
    <%= render 'avatar', user: @user %>
    <h1 class="text-center"><%= @user.first_name.capitalize %> <%= @user.last_name.capitalize %></h1>
    <h2 class="text-center"><%= @user.job_title.capitalize %></h2>
    <div class="text-center">
      <%= link_to "Update Info", edit_user_path(@user), class: 'btn-medium-full' %>
    </div>
    <div class="col-xs-12 padded">
      <p>
        <i class="fa fa-calendar" aria-hidden="true"></i>
        Events I participate
      </p>
      <div>  
        <% @user.events_as_participant .each do |event| %>  
          <div id="event_<%= event.id %>"> 
            <%= render 'events/event', event: event %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>




