<% if policy(@message).create? %>
  <%= simple_form_for([@event, @message], remote: true, :html=> { class: 'form-inline' }) do |f| %>
    <%= f.input :content, as: :string, label: false, placeholder: "votre message", input_html: {width: "400px"}  %>
    <%= f.button :submit, value: 'Postez', class: "btn btn-primary" %>
  <% end %>
<% end %>
