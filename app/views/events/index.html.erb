<div class="container">
  <h2 class="events-list-title text-center">Evénements à venir</h2>
  <div class="row">
    <div class="col-xs-3">
      <ul class="nav index-menu">
        <li><%= link_to 'Tous', events_path %></li>
        <li><%= link_to 'Publics', events_path(filter: 'public') %></li>
        <li><%= link_to 'Privés', events_path(filter: 'private') %></li>
        <li><%= link_to 'Refusés', events_path(filter: 'refused') %></li>
        <li><%= link_to "Créer un événement", new_event_path, class: "btn btn-primary" %></li>
      </ul>
    </div>
    <div class="col-xs-9">
      <h4 class="events-counter">Résultats: <%= @events.count %></h4>
      <% today = DateTime.now.to_date %>
      <% @events.each do |date, events| %>
        <div class="events-date-bg">
          <div class="events-date">
            <div>
              <i class="fa fa-calendar" aria-hidden="true"></i>
              <% if date.to_date == today %>
                Aujourd'hui
              <% elsif date.to_date == (today + 1.days) %>
                Demain
              <% else %>
                <%= date.strftime('%e %B %Y') %>
              <% end %>
            </div>
          </div>
          <% events.each do |event| %>
            <div class="events">
              <div class="events-content">
                <div class="events-time">
                  <h4><%= event.datetime.strftime('%R') %></h4>
                </div>
                <% if event.user.photo? %>
                  <%= cl_image_tag event.user.photo.path, class: 'events-avatar' %>
                <% else %>
                  <%= image_tag 'chicken-grey_1.png', class: 'events-avatar' %>
                <% end %>
                <%= link_to event_path(event), class: 'events-type' do %>
                  <span class="events-type-underline" >
                    <%= event.type_of %>
                    <% if event.time_goal %>
                      <%= event.time_goal_to_s %>
                    <% else %>
                      <%= event.trail_goal %> km(s)
                    <% end %>
                  </span>
                <% end %>
                <!-- <div class="events-rdv">
                  <i class="fa fa-map-marker" aria-hidden="true"></i>
                  <div><%= event.meeting_point %></div>
                </div> -->
                <div class="events-validations" id="event_<%= event.id %>">
                  <%= render 'event', event: event %>
                </div>
              </div>
              <div class='events-bar'>
                <% if event.private %>
                  <div class="events-status-private">Privé</div>
                <% else %>
                  <div class="events-status-public">Public</div>
                <% end %>
                <div class="events-owner">organisé par <%= event.user.first_name.capitalize %></div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>


