<div class="banner" style="background-image: url('<%= image_path 'sign_in.jpg' %>') " id="sign_in" >
  <div class="container padded ">
    <div class="row">
      <div class="col-xs-12 col-md-6 col-md-offset-3 login-form">
        <h2>Déjà membre ? Connectez-vous !</h2>
        <br>
        <br>


        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email, label: false, placeholder: 'Email*', required: false, autofocus: true %>
            <br>
            <%= f.input :password, label: false, placeholder: 'Mot de passe*', required: false %>
            <br>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

            <br>
          <div class="form-actions">
            <%= f.button :submit, "Log me in", class: "btn-blue-edit text-color-log" %>
          </div>
        <% end %>
        <br>
        <%= render "devise/shared/links" %>
        <br>
      </div>
    </div>
  </div>
</div>
