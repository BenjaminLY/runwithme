<% case @event.type_of %>
  <% when "Interval run"%>
    <% photo = "interval.jpg" %>
  <% when "Endurance run"%>
    <% photo = "endurance.jpg" %>
  <% when "Cool run" %>
    <% photo = "cool_run.jpg" %>
  <% when "Chatting run" %>
    <% photo = "chatting_run.jpg" %>
  <% when "Speed walk" %>
    <% photo = "speed_walk.jpg" %>
  <% else %>
    <% photo = "pleasant_walk.jpg" %>
  <% end %>
  <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= image_path photo, width: 600, height: 300, crop: :fill %>);"></div>

  <div class="container">
    <div class="row">
      <div class="col-xs-10 col-xs-offset-1">
        <div class="event">
          <div class="event_header">
            <div class='event-date'>
              <div>
                <h3> <%= @event.datetime.strftime('%e %B %Y') %> </h3>
              </div>
              <div>
                <h3> <%= @event.datetime.strftime('%H:%M') %> </h3>
              </div>
              <div class="public_private">
              <% if @event.private %>
                <%= "PRIVE" %>
              <% else %>
                <%= "PUBLIC" %>
              <% end  %>
              </div>
            </div>
            <div class="event_type">
              <div>
                <h3>
                 <%= @event.type_of %> -
                   <% if @event.time_goal %>
                     <%= @event.time_goal_to_s %>
                   <% end %>
                   <% if @event.trail_goal %>
                      <%= @event.trail_goal %> km
                   <% end %>
                </h3>
              </div>
              <div>
                <h3>RDV - <%= @event.meeting_point %> </h3>
              </div>
              <div>
                <% if policy(@event).edit? %>
                  <%= link_to edit_event_path(@event) do %>
                    <i class="fa fa-pencil" aria-hidden="true"></i>
                  <% end %>
                <% end %>
                <% if policy(@event).destroy? %>
                  <%= link_to event_path, method: :delete do %>
                    <i class="fa fa-trash" aria-hidden="true"></i>
                  <% end %>
                <% end %>
              </div>
            </div>
            <div class="text-center">
              <%= render "users/avatar", user: @event.user %>
              <div class="organizer">
                <p>Organisé par</p>
                <p> <%= @event.user.first_name.capitalize %> <%= @event.user.last_name.capitalize  %></p>
              </div>
            </div>
          </div>
          <div class="event-details">
            <div class="description">
              <div>
                <% unless @event.address.blank? %>
                  <h4><%= "Adresse de l'activité" %></h4>
                  <p><%= @event.address %></p>
                <% end %>
              </div>
              <div>
                <% unless @event.description.blank? %>
                  <h4><%= "Description de l'activité" %></h4>
                  <p><%= @event.description %></p>
                <% end %>
              </div>
              <div class="messages">
                <h4><%= "Messages" %></h4>
                <% unless @event.messages.empty? %>
                  <div class="message">
                    <% @event.messages.each do |message| %>
                    <% unless message.created_at.strftime('%e %B %Y') == Message.where(event_id: message.event_id).last(2).first.created_at.strftime('%e %B %Y') %>
                      <%= message.created_at.strftime('%e %B %Y') %>
                    <% end %>
                      <%= render 'events/messages', message: message %>
                      <hr>
                    <% end %>
                  </div>
                <% end %>
              </div>
              <div class="message_box">
                <%= render 'events/message_box', event: @event, message: @message %>
              </div>
          </div>
          <div class="participation">
            <%= render "events/participations", event: @event %>
          </div>
        </div>
        <div class="photos">
          <div class="photos_header">
            <h4><%= "Vos selfies!" %></h4>
            <div class="photos_btn">
              <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addPhotos">
                 Postez vos selfies!
              </button>
            </div>
          </div>
          <div class="container">
            <div class="row">
              <% unless @event.photos.nil? %>
                <% @event.photos.each do |photo| %>
                  <div class="col-xs-4 col-sm-3 col-sm-2">
                    <div class="photo pad-top">
                      <%= cl_image_tag photo.path, width: 250, height: 250, crop: :fill %>
                    </div>
                  </div>
                <% end %>
              <% end %>
              </div>
            </div>
        </div>
        <div class="back_events">
          <%= link_to "Back to events", events_path %>
        </div>
        <% if @event.latitude &&  @event.longitude %>
          <div id="map" style="width: 100%; height: 600px;"></div>
        <% end %>
      </div>
    </div>
  </div>
</div>

 <div class="modal fade" id="addPhotos" tabindex="-1" role="dialog" aria-labelledby="addPhotosLabel">
   <div class="modal-dialog" role="document">
     <div class="modal-content">
       <div class="modal-header">
         <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
         <h4 class="modal-title" id="addPhotosLabel">Partagez vos selfies! </h4>
       </div>
       <div class="modal-body">
        <%= simple_form_for(@event, :url => add_pictures_path, :method => :patch) do |f| %>
        <%= f.input :photos, as: :attachinary  %>
        <%= f.button :submit, value: 'Postez', class: "btn btn-primary" %>
        <% end %>
       </div>
       <div class="modal-footer">
         <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
       </div>
     </div>
   </div>
 </div>

  <% content_for :after_js do %>
    <% if @event.latitude &&  @event.longitude %>

      <script>
        $(document).ready(function() {
          var handler = Gmaps.build('Google');
          handler.buildMap({ internal: { id: 'map' } }, function() {
            markers = handler.addMarkers(<%= raw @hash.to_json %>);
            handler.bounds.extendWith(markers);
            handler.fitMapToBounds();
            if (markers.length == 0) {
              handler.getMap().setZoom(2);
            } else if (markers.length == 1) {
              handler.getMap().setZoom(14);
            }
          });
        });
      </script>
    <% end %>
  <% end %>

