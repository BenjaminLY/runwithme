	<div data-toggle="tooltip", title="<%= user.first_name.capitalize %> <%= user.last_name.capitalize %> <%= user.job_title %>" >
		<% if user.photo? %>
				<%= cl_image_tag user.photo.path, width: 120, height: 120, crop: :fill, class: "avatar-xlarge"%>
		<% else %>
				<%= image_tag "avatar.jpg", width: 120, height: 120, crop: :fill, class: "avatar-xlarge"%>
		<% end %>
	</div>
