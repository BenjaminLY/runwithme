          <% end %>
        <% end %> 
      </div>
    </div>
    <div class="particpation_avatar">
      <% @event.participations.each do |participation| %>
        <%if participation.status == "maybe" %>
          <div class="avatar_user">
            <%= render "users/avatar_small", user: participation.user %>  
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="participation_all">
    <div class="participation_header">
      <div><h4>Les poules qui ont dit non!</h4></div>
      <div class="participation_icone">
        <% if @event.joined?(current_user) %>
          <%= link_to participation_path(@event.participations.find_by(user: current_user), status: "can t go", type: "show"), method: :patch, remote: true do %>
            <i class="fa fa-times" data-toggle="tooltip" title="Je n'y vais pas"></i>
