
      <% if event.joined?(current_user) %>
        <% case event.participations.find_by(user: current_user).status %>
          <% when "going" %>
            <%= link_to participation_path(event.participations.find_by(user: current_user), status: "going"), method: :patch, style: "color: orange !important;",remote: true do %>
              <i class="fa fa-check" data-toggle="tooltip" title="J'y vais!"></i>
            <% end %>
