          <%= link_to event_participations_path(@event, status: "can t go", type: "show"), method: :post, remote: true do %>
            <i class="fa fa-times" data-toggle="tooltip" title="Je n'y vais pas"></i>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="particpation_avatar">
      <% @event.participations.each do |participation| %>
        <%if participation.status == "can t go" %>
          <div class="avatar_user">
            <%= render "users/avatar_small", user: participation.user %>  
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="participation_all">
    <div class="photos">
     <!-- Button trigger modal -->
     <button type="button" class="btn btn-info" data-toggle="modal" data-target="#addPhotos">
       Postez vos selfies!
     </button>
     <button type="button" class="btn btn-info" data-toggle="modal" data-target="#seePhotos">
       Découvrez les! 
     </button>
     <!-- Modal -->
     <div class="modal fade" id="addPhotos" tabindex="-1" role="dialog" aria-labelledby="addPhotosLabel">
       <div class="modal-dialog" role="document">
         <div class="modal-content">
           <div class="modal-header">
             <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
             <h4 class="modal-title" id="addPhotosLabel">Partagez vos selfies! </h4>
           </div>
           <div class="modal-body">
            <%= simple_form_for(@event, :url => add_pictures_path, :method => :patch) do |f| %>
            <%= f.input :photos, as: :attachinary  %>  
            <%= f.button :submit, value: 'Postez', class: "btn btn-primary" %>
            <% end %>
           </div>
           <div class="modal-footer">
             <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
           </div>
         </div>
       </div>
     </div> 
     <!-- Button trigger modal -->

     <!-- Modal -->
     <div class="modal fade" id="seePhotos" tabindex="-1" role="dialog" aria-labelledby="seePhotosLabel">
       <div class="modal-dialog" role="document">
         <div class="modal-content">
           <div class="modal-header">
             <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
             <h4 class="modal-title" id="seePhotosLabel">Vous êtes beaux pendant l'effort!</h4>
           </div>
           <div class="modal-body">
            <% unless @event.photos.nil? %>
              <% @event.photos.each do |photo| %>
                <div class="photo">
                  <%= cl_image_tag photo.path, width: 300, height: 200, crop: :fill %>
                </div>
              <% end %>
            <% end %>
           </div>
           <div class="modal-footer">
             <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
           </div>
         </div>
       </div>
     </div>
    </div>  
  </div>





