<div class="container">
  <% if @events == [] && @my_events == [] %>
      <h1>Sorry there is no public event at the moment ! </h1>
      <h1>
        Go on poules create yours !
        <%= image_tag "chicken.png", width: 80 %>
        <%= image_tag "chicken.png", width: 80 %>
        <%= image_tag "chicken.png", width: 80 %>
        <%= image_tag "chicken.png", width: 80 %>
      </h1>
  <% else %>
    <div class="text-center padded">
      <h1 id= "events">Events</h1>
    </div>
    <div>
      <% @events.each do |event| %>
        <div id="event_<%= event.id %>">
          <%= render 'event', event: event %>
        </div>
      <% end %>
    </div>

    <div>  
      <% @my_events.each do |event| %>  
        <div id="event_<%= event.id %>"> 
          <%= render 'event', event: event %>
        </div>
      <% end %>
    </div>

  <% end %>
</div>


